{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
         ".env*"
      ],
      "outputs": [
        "apps/backend/dist/**",
        "apps/frontend/.next/**",
        "packages/shared/dist/**"
      ]
    },
    "lint": {},
    "type-check": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
   "test": {
      "inputs": ["$TURBO_DEFAULT$", "**/*.test.js", "**/*.test.ts", ".env"],
      "outputs": [],
      "dependsOn": ["^install"]
    },
    "clean": {
      "cache": false
    }
    
  }
}
